<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="redacted.hvzui.GM_choose_OZ">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/hbg"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select User to Infect as the first zombie"
        android:id="@+id/textView"
        android:background="#f3990a"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:id="@+id/spinner_first_zombie"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/editText"
        android:layout_marginTop="50dp"
        android:background="#f3990a" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Infect!"
        android:id="@+id/GM_create_first_zombie"
        android:backgroundTint="#fb8a00"
        android:background="#ffffff"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/spinner_first_zombie"
        android:layout_centerHorizontal="true"
        android:onClick="select_zero_click" />


</RelativeLayout>
