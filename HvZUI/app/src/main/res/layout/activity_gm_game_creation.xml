<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="redacted.hvzui.GM_game_creation">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/hbg"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label1"
        android:text="Time per kill (hours)"
        android:background="#ff7309"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:autoText="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label4"
        android:text="Game title"
        android:background="#ff7309"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="133dp"
        android:autoText="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label2"
        android:text="Stun timer (minutes)"
        android:background="#ff7309"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:autoText="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label3"
        android:text="# of Required missions"
        android:background="#ff7309"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:autoText="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/time_per_kill"
        android:background="#fc9f59"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="230dp"
        android:text="24" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/stun_timer_duration"
        android:background="#fc9f59"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="230dp"
        android:text="15" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:ems="10"
        android:id="@+id/game_name"
        android:background="#fc9f59"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>


    <EditText
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number_of_required_missions"
        android:background="#fc9f59"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="230dp"
        android:text="5" />
</RelativeLayout>
