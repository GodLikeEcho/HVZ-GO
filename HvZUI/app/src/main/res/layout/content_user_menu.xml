<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user_menu" tools:context="redacted.hvzui.UserMenu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/hbg"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Chat"
        android:id="@+id/button2"

        android:background="#fb8a00"
        android:layout_marginTop="50dp"
        android:onClick="H_chat_Click"
        android:layout_below="@+id/TimerBox"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Show QR Tag"
        android:id="@+id/showQR"

        android:background="#fb8a00"

        android:onClick="QR_show_click"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Mission"
        android:id="@+id/button3"
        android:background="#fb8a00"
        android:onClick="missions_Click"
        android:layout_below="@+id/showQR"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Rules"
        android:id="@+id/Rules"
        android:background="#fb8a00"
        android:onClick="rules_Click"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"
        android:id="@+id/Moderate"
        android:background="#fb8a00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="report_Click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/TimerBox"
        android:layout_alignParentTop="true"
        android:background="#ff7309"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="All Chat"
        android:background="#fb8a00"
        android:id="@+id/button"
        android:onClick="A_chat_Click"
        android:layout_below="@+id/Rules"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Settings"
        android:background="#fb8a00"
        android:id="@+id/settings"
        android:onClick="h_settings_Click"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
